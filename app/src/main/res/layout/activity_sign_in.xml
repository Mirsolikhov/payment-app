<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frame_19"
    android:orientation="vertical"
    tools:context=".SignIn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/logo_01"
            android:gravity="center_horizontal"
            android:layout_margin="50dp"/>
    </LinearLayout>


    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/signin_shape"
        android:drawableLeft="@drawable/baseline_phone_android_24"
        android:drawablePadding="5dp"
        android:fontFamily="@font/jetbrains_mono_light"
        android:hint="Phone number"
        android:inputType="phone"
        android:padding="20dp"
        android:textColor="#EAE8E8"
        android:textColorHint="#EAE8E8" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/signin_shape"
        android:drawableLeft="@drawable/baseline_security_24"
        android:drawablePadding="5dp"
        android:fontFamily="@font/jetbrains_mono_light"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textColorHint="#EAE8E8"
        android:textColor="#EAE8E8"/>

    <Button
        android:id="@+id/signIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:textSize="25dp"
        android:textColor="#D7DCDD"
        android:fontFamily="@font/jetbrains_mono_medium"
        android:textAllCaps="false"
        android:padding="10dp"
        android:backgroundTint="#00333333"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:onClick="toMainInterface"/>

    <TextView
        android:id="@+id/signUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Sign Up"
        android:textSize="26dp"
        android:fontFamily="@font/jetbrains_mono_medium"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#D7DCDD"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:onClick="SignUp"/>
</LinearLayout>